<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
        <title>{% block title %}Home{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
     <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('homepage') }}">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                             <a class="navbar-brand" href="{{ path('contactpage') }}">Contact</a>
                        </li>
                         <li class="nav-item">
                             <a class="navbar-brand" href="{{ path('annonce_index') }}">Annonce</a>
                        </li>
                         <li class="nav-item">
                             <a class="navbar-brand" href="{{ path('category_index') }}">Categorie</a>
                        </li>
                        <li class="nav-item">
                             <a class="navbar-brand" href="{{ path('region_index') }}">Region</a>
                        </li>
                        <li class="nav-item">
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="navbar-brand" href="{{ path('admin') }}">Admin</a>
                            </li>  
                         {% endif %}
                        {% if is_granted('ROLE_USER') == false %}
                            <li class="nav-item">
                                <a class="navbar-brand" href="{{ path('app_login') }}">Connexion</a>
                                <a class="navbar-brand" href="{{ path('app_register') }}">s'enregistrer</a>
                            </li>  
                        {% else %}   
                            <li class="nav-item">
                                <a class="navbar-brand" href="{{ path('app_logout') }}">Deconnexion</a>
                            </li>  
                           <li style="color:grey">
                                {{ app.user.email }}
                           </li> 
                        {% endif %}
                        
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
             {% block body %}{% endblock %}
        </div>
    </body>
</html>
