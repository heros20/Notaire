				</tr>
				<tr>
					<th>Wc</th>
					<td>{{ annonce.wc }}</td>
				</tr>
				<tr>
					<th>Garage</th>
					<td>{{ annonce.garage }}</td>
				</tr>
				<tr>
					<th>Piscine</th>
					<td>{{ annonce.piscine }}</td>
				</tr>
			</tbody>
		</table>

	</div>


	<a class="btn btn-primary ml-5 mt-3 pl-4 pr-4" href="{{ path('annonce_index') }}">Retour</a>
	{{ include('annonce/_delete_form.html.twig') }}
