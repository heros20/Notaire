		<h1 class="mb-5">Annonce</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ annonce.id }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ annonce.title }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ annonce.description }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ annonce.image }}</td>
				</tr>
				<tr>
					<th>Superficie</th>
					<td>{{ annonce.superficie }}</td>
				</tr>
				<tr>
					<th>SuperficieTerrain</th>
					<td>{{ annonce.superficieTerrain }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ annonce.price }}</td>
				</tr>
				<tr>
					<th>Status</th>
					<td>{{ annonce.status ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Etat</th>
					<td>{{ annonce.etat ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Dpe</th>
					<td>{{ annonce.dpe }}</td>
				</tr>
				<tr>
					<th>Ges</th>
