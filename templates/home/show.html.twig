{% extends 'base.html.twig' %}

{% block title %}Annonce
{% endblock %}

{% block body %}
	<div class="show">
		<div class="showAnnonce">
			<p>{{ annonce.title }}</p>
			<p>{{ annonce.description }}</p>
			<p><img src="{{ annonce.image }}" alt=""></p>
			<p>{{ annonce.superficie }}</p>
			<p>{{ annonce.superficieTerrain }}</p>
			<p>{{ annonce.price }}</p>
			<p>{{ annonce.status ? 'Yes' : 'No' }}</p>
			<p>{{ annonce.etat ? 'Yes' : 'No' }}</p>
			<p>{{ annonce.dpe }}</p>
			<p>{{ annonce.ges }}</p>
			<p>{{ annonce.nbrePieces }}</p>
			<p>{{ annonce.nbreChambre }}</p>
			<p>{{ annonce.salleBain }}</p>
			<p>{{ annonce.wc }}</p>
			<p>{{ annonce.garage }}</p>
			<p>{{ annonce.piscine }}</p>
			<div class="red">
			{% if is_granted("ROLE_USER") %}
				{% for favoris in annonce.favoris %}
					{% if favoris.id == app.user.id %}
						<a href="{{ path('retrait_favoris', {id: annonce.id}) }}"><i class="fas fa-heart"></i></a>
					{% else %}
						<a href="{{ path('ajout_favoris', {id: annonce.id}) }}"><i class="far fa-heart"></i></a>
					{% endif %}
				{% else %}
					<a href="{{ path('ajout_favoris', {id: annonce.id}) }}"><i class="far fa-heart"></i></a>
				{% endfor %}	
			{% endif %}
			
			
		</div>
		</div>
		
	</div>
{% endblock %}
