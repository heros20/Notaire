	<section class="annonce">
		<div class="annonce__blockTitle">
			<h3>Les dernières annonces immobilières</h3>
			<p>Que vous soyez vendeur ou acquéreur, vous trouverez chez votre notaire le service complet vous garantissant la bone fin de votre opération</p>
		</div>
		<div class="annonce__blockCard">
			{% for annonce in annonces %}
				<div class="annonce__card" data-aos="zoom-in" data-aos-easing="ease-in-out" data-aos-duration="500">
					<a class="action" href="{{ path('frontAnnonce_show', {'id': annonce.id}) }}">
						<img src="{{ asset('assets/uploads/pascal-bernardon-TVcj-so0GDs-unsplash.jpg') }}" alt="{{ annonce.image }}">
						<h4>{{ annonce.title }}</h4>
						<p>{{ annonce.description }}</p>
						<div class="annonce__coeur">
							{% if is_granted("ROLE_USER") %}
								{% for favoris in annonce.favoris %}
									{% if favoris.id == app.user.id %}
										<span>
											<a href="{{ path('retrait_favoris', {id: annonce.id}) }}">
												<i class="fas fa-heart heart"></i>
												<i class="fas fa-heart heart-color"></i>
											</a>
										</span>
									{% else %}
										<span>
											<a href="{{ path('ajout_favoris', {id: annonce.id}) }}">
												<i class="fas fa-heart heart"></i>
												<i class="fas fa-heart heart-color"></i>
											</a>
										</span>
									{% endif %}
								{% else %}
									<span>
										<a href="{{ path('ajout_favoris', {id: annonce.id}) }}">
											<i class="fas fa-heart heart"></i>
											<i class="fas fa-heart heart-color"></i>
										</a>
									</span>
								{% endfor %}
							{% endif %}
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}

  
