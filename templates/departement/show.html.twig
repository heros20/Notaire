{% extends 'back.html.twig' %}

{% block title %}Éditer le Département{% endblock %}

{% block body %}
    <h1>Departement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ departement.title }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ departement.codePostal }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ departement.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ departement.createdAt ? departement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('departement_index') }}">back to list</a>

    {{ include('departement/_delete_form.html.twig') }}
{% endblock %}
