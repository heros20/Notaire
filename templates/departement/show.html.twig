{% extends 'back.html.twig' %}

{% block title %}Éditer le Département
{% endblock %}

{% block body %}
	<div class="shadow-sm p-3 mb-5 bg-white rounded form">

		<h1 class="mb-5">Departement</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ departement.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ departement.title }}</td>
				</tr>
				<tr>
					<th>CodePostal</th>
					<td>{{ departement.codePostal }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ departement.description }}</td>
				</tr>
				<tr>
					<th>Crée le</th>
					<td>{{ departement.createdAt ? departement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="flex">
		<a class="btn btn-primary ml-5" href="{{ path('departement_index') }}">Retour</a>
		{{ include('departement/_delete_form.html.twig') }}
	</div>
{% endblock %}
