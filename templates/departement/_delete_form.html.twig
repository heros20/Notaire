<form method="post" action="{{ path('departement_delete', {'id': departement.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ departement.id) }}">
    <button class="btn btn-danger ml-5 mt-3">Supprimer le département</button>
</form>
