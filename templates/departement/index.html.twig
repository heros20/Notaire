{% extends 'back.html.twig' %}

{% block title %} Les Départements{% endblock %}

{% block body %}
    <h1 class="ml-5 mb-5">Departement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CodePostal</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td>{{ departement.id }}</td>
                <td>{{ departement.title }}</td>
                <td>{{ departement.codePostal }}</td>
                <td>{{ departement.description }}</td>
                <td>{{ departement.createdAt ? departement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('departement_show', {'id': departement.id}) }}">Voir</a>
                    <a href="{{ path('departement_edit', {'id': departement.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'éléments</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class=" btn btn-primary ml-5 pt-2 pb-2 pl-3 pr-3" href="{{ path('departement_new') }}">Créez</a>
{% endblock %}
