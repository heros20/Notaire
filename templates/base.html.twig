						{% if is_granted('ROLE_ADMIN') %}
							<li>
								<a href="{{ path('admin') }}">Admin</a>
							</li>
						{% endif %}
					{% else %}
						<li>
							<a href="{{ path('app_login') }}">Connection</a>
						</li>
						<li>
							<a href="{{ path('app_register') }}">Inscription</a>
						</li>
					{% endif %}
				</ul>
			</nav>
		</header>
		{% block body %}{% endblock %}
