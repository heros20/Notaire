<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
			<link rel="preconnect" href="https://fonts.gstatic.com">
			<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Roboto:wght@300&display=swap" rel="stylesheet">
			{{ encore_entry_link_tags('front') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('front') }}
		{% endblock %}
	</head>
	<body>
		<header>
				<div class="logo">
					<img src="" alt="">
				</div>
				<div class="navigation">
					<input type="checkbox" class="navigation__checkbox" id="navi-toggle" aria-checked="false">
					<nav class="navbar">
						<div class="navbar__menu">
							<ul class="navbar__links">
								<li class="navbar__item">
									<a href="{{path('home')}}" class="current-page">Accueil</a>
								</li>
								<li class="navbar__item">
									<a href="{{ path('presentation') }}" class="navbar__link">Présentation</a>
								</li>
								<li class="navbar__item">
									<a href="{{ path('competence') }}" class="navbar__link">Compétences</a>
								</li>
								<li class="navbar__item">
									<a href="{{ path('annonces') }}" class="navbar__link">Annonces</a>
								</li>
								<li class="navbar__item">
									<a href="{{ path('contact') }}" class="navbar__link">Contact</a>
								</li>
								<li>
								<a href="{{ path('conditions_generales') }}" class="navbar__link">Conditions Generales</a>
							</li>
							<li>
								<a href="{{ path('mentions_legales') }}" class="navbar__link">Mentions Legales</a>
							</li>
							<li>
								<a href="{{ path('profile') }}" class="navbar__link">Espace Client</a>
							</li>
							{# {% if is_granted('ROLE_USER') %}
								{{ app.user.email }}
								<li>
									<a href="{{ path('app_logout') }}" class="navbar__link">Deconnexion</a>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li>
										<a href="{{ path('admin') }}" class="navbar__link">Admin</a>
									</li>
								{% endif %}
							{% else %}
								<li>
									<a href="{{ path('app_login') }}" class="navbar__link">Connexion</a>
								</li>
								<li>
									<a href="{{ path('app_register') }}" class="navbar__link">Inscription</a>
								</li>
							{% endif %} #}
							</ul>
						</div>
					</nav>
					<label for="navi-toggle" class="navigation__button" aria-haspopup="true" aria-controls="main-menu" aria-label="Open or close main menu">
						<span class="navigation__icon">&nbsp;</span>
					</label>
				</div>
				{# .navHeader #}
			{# .header #}
		</header>

		{% block body %}{% endblock %}

	</body>

</html>
