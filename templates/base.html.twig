<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav>
				<ul>
					<li>
						<a href="{{ path('home') }}">Home</a>
					</li>
					<li>
						<a href="{{ path('presentation') }}">Pr√©sentation</a>
					</li>
					<li>
						<a href="{{ path('competence') }}">Competence</a>
					</li>
					<li>
						<a href="{{ path('annonces') }}">Annonces</a>
					</li>
					<li>
						<a href="{{ path('contact') }}">Contact</a>
					</li>
					<li>
						<a href="{{ path('conditions_generales') }}">Conditions Generales</a>
					</li>
					<li>
						<a href="{{ path('mentions_legales') }}">Mentions Legales</a>
					</li>
					{% if is_granted('ROLE_USER') %}
						{{ app.user.email }}
						<li>
							<a href="{{ path('profile') }}">Escpace Client</a>
						</li>
						<li>
							<a href="{{ path('app_logout') }}">Deconextion</a>
