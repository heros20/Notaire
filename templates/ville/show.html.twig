{% extends 'back.html.twig' %}

{% block title %}Ville
{% endblock %}

{% block body %}
	<div class="shadow-sm p-3 mb-5 bg-white rounded form">

		<h1 class="mb-5">Ville</h1>
		<div class="flex mb-3">
			<a class="btn btn-primary " href="{{ path('ville_index') }}">Retour</a>
			{{ include('ville/_delete_form.html.twig') }}
		</div>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ ville.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ ville.title }}</td>
				</tr>
				<tr>
					<th>Code Postal</th>
					<td>{{ ville.codePostal }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ ville.description }}</td>
				</tr>
				<tr>
					<th>Crée le</th>
					<td>{{ ville.createdAt ? ville.createdAt|date('d/m/Y à H:i') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>

{% endblock %}
