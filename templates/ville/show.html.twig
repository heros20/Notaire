{% extends 'back.html.twig' %}

{% block title %}Ville
{% endblock %}

{% block body %}
	<h1>Ville</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ ville.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ ville.title }}</td>
			</tr>
			<tr>
				<th>CodePostal</th>
				<td>{{ ville.codePostal }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ ville.description }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ ville.createdAt ? ville.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('ville_index') }}">Retour</a>

	{{ include('ville/_delete_form.html.twig') }}
{% endblock %}
