{% extends 'back.html.twig' %}

{% block title %}Categorie
{% endblock %}

{% block body %}
<div class="pl-5 pr-5">

	<h1 class="mb-5">Categorie</h1>

	<table class="table boxshadow">

		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ category.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ category.description }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>ModifiedAt</th>
				<td>{{ category.modifiedAt ? category.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>
</div>

	<a class="btn btn-primary ml-5" href="{{ path('category_index') }}">Retour</a>

	{{ include('category/_delete_form.html.twig') }}
{% endblock %}
