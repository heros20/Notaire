{% extends 'back.html.twig' %}

{% block title %}Catégorie
{% endblock %}

{% block body %}
	<div class="shadow-sm p-3 mb-5 bg-white rounded form">


		<h1 class="mb-5">Categorie</h1>

		<table class="table">

			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ category.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ category.title }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ category.description }}</td>
				</tr>
				<tr>
					<th>Crée le</th>
					<td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Modifié le</th>
					<td>{{ category.modifiedAt ? category.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="flex">
		<a class="btn btn-primary ml-5" href="{{ path('category_index') }}">Retour</a>

		{{ include('category/_delete_form.html.twig') }}
	</div>

{% endblock %}
