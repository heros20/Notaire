{% extends 'back.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<div class="shadow-sm p-3 mb-5 bg-white rounded form">

		<h1 class="mb-5">Categories</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Titre</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.title }}</td>
						<td>{{ category.description }}</td>
						<td>
							<a class="action" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
							<a class="action" href="{{ path('category_edit', {'id': category.id}) }}">Éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Pas d'éléments</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<a class="btn btn-primary ml-5" href="{{ path('category_new') }}">Créer</a>
{% endblock %}
