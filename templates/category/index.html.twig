{% extends 'back.html.twig' %}

{% block title %}Étude de Maître Régis Richard - Catégories

{% endblock %}

{% block body %}
	<div class="shadow-sm p-3 mb-5 bg-white rounded form">
		<h1 class="mb-5">Categories</h1>
		<a class="btn btn-primary mb-2" href="{{ path('admin') }}">Retour</a>
		<a class="btn btn-primary mb-2" href="{{ path('category_new') }}">Ajouter une categorie</a>
		<table class="table">
			<thead>
				<tr>
					<th>Titre</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.title }}</td>
						<td>{{ category.description }}</td>
						<td>
							<a class="action btn btn-info text-light" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
							<a class="action btn btn-success text-light" href="{{ path('category_edit', {'id': category.id}) }}">Éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Pas d'éléments</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	
{% endblock %}
