{% extends 'back.html.twig' %}

{% block title %}
Étude de Maître Régis Richard - Les utilisateurs

{% endblock %}

{% block body %}
	<div class="shadow-sm p-3 mb-2 bg-white rounded form">

		<h1 class="mb-3">Utilisateurs</h1>
		<a class="btn btn-primary mb-4" href="{{ path('category_index') }}">Retour</a>
		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Téléphone</th>
                    <th>Crée le</th>
                    <th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.name }}</td>
						<td>{{ user.username }}</td>
						<td>
							{% if user.phone is empty %}
                                Non renseigner
                            {% else %}
                                {{ user.phone }}
                            {% endif %}
                        </td>
                        <td>{{ user.createdAt | date('d/m/Y') }} à {{ user.createdAt | date('H:i') }}</td>
	                    <td>
							<a class="action btn btn-info text-light" href="{{ path('utilisateur_show', {'id': user.id}) }}">Voir</a>
							<a class="action btn btn-success text-light" href="{{ path('utilisateur_edit', {'id': user.id}) }}">Éditer</a>
							<a class="action btn btn-secondary text-light" href="{{ path('utilisateur_notif', {'id': user.id}) }}">Envoyer un message</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Pas d'éléments</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}

